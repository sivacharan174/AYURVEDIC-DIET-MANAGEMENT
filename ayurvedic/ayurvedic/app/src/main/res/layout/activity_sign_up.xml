<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join us to manage your clinic"
                android:textColor="#B8FFDD"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your full name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Phone Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter phone number"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Create a password"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Clinic Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Name"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etClinic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter clinic name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:elevation="6dp"/>

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="#B8FFDD"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textStyle="bold"
                android:textColor="#00E676"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
