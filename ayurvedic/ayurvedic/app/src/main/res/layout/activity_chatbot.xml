<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient"
    android:orientation="vertical">

    <!-- Modern Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/card_bg_modern"
            android:padding="10dp"
            app:tint="#FFFFFF"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ Ayurveda AI"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your wellness companion"
                android:textColor="#B8FFDD"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnClearChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/card_bg_modern"
            android:padding="10dp"
            app:tint="#FF6B6B"/>
    </LinearLayout>

    <!-- Suggestion Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/llSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDosha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§˜ Dosha balance tips"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸ Diet for my dosha"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHerbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ Herbal remedies"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLifestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸƒ Daily routine"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Chat Messages List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <!-- Typing Indicator -->
    <LinearLayout
        android:id="@+id/llTyping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminateTint="#00E676"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI is thinking..."
            android:textColor="#B8FFDD"
            android:textSize="12sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Input Area -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#1A5D4A"
        app:cardCornerRadius="28dp"
        app:cardElevation="4dp"
        app:strokeColor="#00E67630"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Ask about Ayurveda..."
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:maxLines="3"/>

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/chip_accent"
                android:padding="10dp"
                app:tint="#0D2818"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
