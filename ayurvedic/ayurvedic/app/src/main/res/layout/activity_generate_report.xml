<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ Generate Report"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export patient data"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Patient Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Patient"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spPatient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingHorizontal="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Report Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPORT TYPE"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RadioGroup
                android:id="@+id/rgReportType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbDietSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Diet Summary Report"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbAssessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§˜ Ayurvedic Assessment Report"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Progress Report"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbComprehensive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‘ Comprehensive Report"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Date Range -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE RANGE"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                app:cardBackgroundColor="#1A5D4A"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeColor="#00E67630"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/etFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="ðŸ“… From Date"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#B8FFDD60"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#1A5D4A"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeColor="#00E67630"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/etToDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="ðŸ“… To Date"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#B8FFDD60"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Include Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INCLUDE IN REPORT"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cbDietCharts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸ Diet Charts"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbNutrientAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Nutrient Analysis"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbDoshaAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§˜ Dosha Analysis"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbRecommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Recommendations"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:checked="true"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Generate Report"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end"
            app:iconTint="#0D2818"
            app:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Share with Patient"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#00E676"
            app:backgroundTint="#1A5D4A"
            app:cornerRadius="14dp"
            app:strokeColor="#00E67640"
            app:strokeWidth="1dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
