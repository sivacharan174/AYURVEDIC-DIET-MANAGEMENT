<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#1F5D4A"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#00E67630"
    app:strokeWidth="1dp"
    app:rippleColor="#3000E676">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Food Icon Circle -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/avatar_circle">

            <TextView
                android:id="@+id/tvFoodIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸš"
                android:textSize="24sp"/>
        </FrameLayout>

        <!-- Food Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- Tags Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 kcal"
                    android:textColor="#0D2818"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/chip_accent"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"/>

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grains"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="#B8FFDD60"/>

                <TextView
                    android:id="@+id/tvRasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweet"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDosha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good for: Vata, Pitta"
                android:textColor="#7CFFB2"
                android:textSize="11sp"
                android:layout_marginTop="6dp"
                android:drawablePadding="4dp"/>
        </LinearLayout>

        <!-- Arrow indicator -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#B8FFDD60"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
