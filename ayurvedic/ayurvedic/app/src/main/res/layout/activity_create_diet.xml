<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Diet Chart"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan personalized meals"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Patient Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/avatar_circle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ðŸ‘¤"
                        android:textSize="22sp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvPatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient: John Doe"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="14dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Diet Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Duration"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spDuration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingHorizontal="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Diet Goal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Goal"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RadioGroup
                android:id="@+id/rgGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbWeightLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸƒ Weight Loss"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbWeightGain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª Weight Gain"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbMaintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš–ï¸ Maintenance"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbDosha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§˜ Dosha Balancing"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbTherapeutic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Š Therapeutic/Medicinal"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calorie Target -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Calorie Target"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etCalories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="e.g., 1800"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Special Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Instructions"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Any special dietary instructions..."
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue to Meal Plan"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end"
            app:iconTint="#0D2818"
            app:elevation="6dp"/>

    </LinearLayout>
</ScrollView>
