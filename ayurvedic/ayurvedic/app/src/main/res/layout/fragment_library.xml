<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_splash_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Modern Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Library"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayurvedic recipes for healthy living"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Modern Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#1A5D4A"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:strokeColor="#00E67630"
        app:strokeWidth="1dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ay_search"
                app:tint="#B8FFDD"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search recipes..."
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:imeOptions="actionSearch"
                android:inputType="text"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Recipe List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>
