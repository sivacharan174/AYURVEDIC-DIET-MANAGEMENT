<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¿ Lifestyle Inputs"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily habits &amp; routines"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_edit"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                android:visibility="gone"
                app:tint="#00E676"/>
        </RelativeLayout>

        <!-- Progress Bar for loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#00E676"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>

        <!-- Sleep Quality Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLEEP QUALITY"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <RadioGroup
                android:id="@+id/rgSleepQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbSleepGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜´ Good"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:buttonTint="#00E676"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/rbSleepModerate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜ Moderate"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:buttonTint="#FFB74D"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/rbSleepPoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜« Poor"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:buttonTint="#EF5350"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etSleepHours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="â° Average sleep hours (e.g., 7)"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bowel Movement Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOWEL MOVEMENT"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RadioGroup
                android:id="@+id/rgBowel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbBowelRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… Regular (1-2 times/day)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbBowelConstipation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Constipation"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbBowelLoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Loose motions"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbBowelIrregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âŒ Irregular"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#EF5350"
                    android:paddingStart="8dp"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Water Intake Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WATER INTAKE"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etWaterIntake"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ðŸ’§ Glasses per day (e.g., 8)"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Activity Level Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVITY LEVEL"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RadioGroup
                android:id="@+id/rgActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbSedentary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸª‘ Sedentary (desk job)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbLightActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¶ Light Active (occasional walking)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbModerateActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸƒ Moderate Active (regular exercise)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbVeryActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª Very Active (daily intense exercise)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stress Level Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STRESS LEVEL"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <RadioGroup
                android:id="@+id/rgStress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbStressLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜Œ Low"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:buttonTint="#00E676"
                    android:layout_marginEnd="20dp"/>

                <RadioButton
                    android:id="@+id/rbStressMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜ Medium"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:buttonTint="#FFB74D"
                    android:layout_marginEnd="20dp"/>

                <RadioButton
                    android:id="@+id/rbStressHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜° High"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:buttonTint="#EF5350"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Lifestyle Info"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:elevation="6dp"/>

    </LinearLayout>
</ScrollView>
