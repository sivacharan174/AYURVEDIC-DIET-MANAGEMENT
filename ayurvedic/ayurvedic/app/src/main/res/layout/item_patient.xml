<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#1A5D4A"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="#00E67620"
    app:strokeWidth="1dp"
    app:rippleColor="#3000E676">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar Circle with Initials -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/avatar_circle">

            <TextView
                android:id="@+id/tvInitials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="AS"
                android:textColor="#0D2818"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </FrameLayout>

        <!-- Patient Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anika Sharma"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 32 â€¢ Prakriti: Vata"
                android:textColor="#B8FFDD"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/statusDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/avatar_circle"/>

                <TextView
                    android:id="@+id/tvLastVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Visit: 2024-07-20"
                    android:textColor="#9CFFCC"
                    android:textSize="11sp"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#B8FFDD"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
