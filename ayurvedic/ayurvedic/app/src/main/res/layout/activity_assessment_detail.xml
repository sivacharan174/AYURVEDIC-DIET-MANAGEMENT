<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ðŸ§˜ Prakriti Assessment"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>

        <!-- Date Badge -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00E67620"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorded: Jan 05, 2026"
                android:textColor="#00E676"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dosha Section (for Prakriti/Vikriti) -->
            <LinearLayout
                android:id="@+id/doshaSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Dominant Dosha -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00E67630"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOMINANT TYPE"
                            android:textColor="#B8FFDD80"
                            android:textSize="12sp"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/tvDominant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pitta Dominant"
                            android:textColor="#00E676"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Dosha Breakdown -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1A5D4A"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <!-- Vata -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¨"
                                android:textSize="32sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vata"
                                android:textColor="#B8FFDD"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tvVata"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35%"
                                android:textColor="#00E676"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Pitta -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¥"
                                android:textSize="32sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pitta"
                                android:textColor="#B8FFDD"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tvPitta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40%"
                                android:textColor="#FF6B6B"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Kapha -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’§"
                                android:textSize="32sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kapha"
                                android:textColor="#B8FFDD"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tvKapha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25%"
                                android:textColor="#4FC3F7"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Agni Section -->
            <LinearLayout
                android:id="@+id/agniSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1A5D4A"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥"
                            android:textSize="64sp"/>

                        <TextView
                            android:id="@+id/tvAgniType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sama Agni"
                            android:textColor="#00E676"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/tvAgniDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Balanced digestive fire. Digests food properly."
                            android:textColor="#B8FFDD"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.4"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
