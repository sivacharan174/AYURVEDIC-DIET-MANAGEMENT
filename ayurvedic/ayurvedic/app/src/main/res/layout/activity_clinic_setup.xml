<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥"
                android:textSize="48sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clinic Setup"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configure your clinic details"
                android:textColor="#B8FFDD"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Clinic Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Name"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etClinicName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter clinic name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Clinic Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Type"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etClinicType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="e.g., Ayurvedic, Multi-specialty"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Number of Practitioners -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Practitioners"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etPractitioners"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter number"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ayurveda Specialization -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayurveda Specialization"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp">

            <EditText
                android:id="@+id/etSpecialization"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="e.g., Panchakarma, Diet Therapy"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:elevation="6dp"/>

    </LinearLayout>
</ScrollView>
