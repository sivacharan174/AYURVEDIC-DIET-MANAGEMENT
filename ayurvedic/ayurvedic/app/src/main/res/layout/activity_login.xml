<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Modern Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/card_bg_modern"
            android:padding="10dp"
            app:tint="#FFFFFF"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in to continue"
        android:textColor="#B8FFDD"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"/>

    <!-- Email Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#B8FFDD"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardBackgroundColor="#1A5D4A"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="#00E67630"
        app:strokeWidth="1dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter your email"
            android:textColor="#FFFFFF"
            android:textColorHint="#B8FFDD60"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Password Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#B8FFDD"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardBackgroundColor="#1A5D4A"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="#00E67630"
        app:strokeWidth="1dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#B8FFDD60"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Links Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Clinic? Sign up"
            android:textColor="#00E676"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="#00E676"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#0D2818"
        app:backgroundTint="#00E676"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>
