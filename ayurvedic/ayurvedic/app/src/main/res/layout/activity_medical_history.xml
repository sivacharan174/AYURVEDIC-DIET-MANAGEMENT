<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥ Medical History"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health conditions &amp; allergies"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_edit"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                android:visibility="gone"
                app:tint="#00E676"/>
        </RelativeLayout>

        <!-- Progress Bar for loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#00E676"/>

        <!-- Existing Conditions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXISTING CONDITIONS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cbDiabetes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ©º Diabetes"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbHypertension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ Hypertension"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbThyroid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¦‹ Thyroid Disorder"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbHeartDisease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’“ Heart Disease"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbArthritis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¦´ Arthritis"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbDigestive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ«ƒ Digestive Disorders"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etOtherConditions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Other conditions..."
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Current Medications Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT MEDICATIONS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etMedications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ðŸ’Š List current medications..."
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Allergies Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALLERGIES"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#EF535030"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cbAllergyDairy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥› Dairy"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#EF5350"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbAllergyGluten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¾ Gluten"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#EF5350"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbAllergyNuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥œ Nuts"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#EF5350"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbAllergySeafood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¦ Seafood"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:buttonTint="#EF5350"
                    android:paddingStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etOtherAllergies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Other allergies..."
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Medical History"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:elevation="6dp"/>

    </LinearLayout>
</ScrollView>
