<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:top="3dp" android:left="2dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Main card -->
    <item android:bottom="3dp" android:right="2dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#2D7A68"
                android:endColor="#1A5D4A"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#3D9A8830"/>
        </shape>
    </item>
</layer-list>
