<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Modern Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/card_bg_modern"
            android:padding="10dp"
            app:tint="#FFFFFF"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‚ Seasonal Foods"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ritucharya guidelines"
                android:textColor="#B8FFDD"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Current Season Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A5D4A"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Season"
                android:textColor="#B8FFDD"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvCurrentSeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„ï¸ Winter (Shishira)"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvSeasonDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cold and dry season. Favor warm, nourishing foods."
                android:textColor="#B8FFDD"
                android:textSize="13sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Season Tabs with Material Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/btnSpring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¸ Spring"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnSummer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜€ï¸ Summer"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnMonsoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ§ï¸ Monsoon"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnAutumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‚ Autumn"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1A5D4A"
                app:chipCornerRadius="20dp"
                app:chipStrokeColor="#00E67640"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnWinter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„ï¸ Winter"
                android:textColor="#0D2818"
                app:chipBackgroundColor="#00E676"
                app:chipCornerRadius="20dp"
                android:checked="true"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Recommended Foods Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recommended Foods"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All â†’"
            android:textColor="#00E676"
            android:textSize="12sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>
