<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp">

    <!-- User Message (Right aligned) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="60dp"
        app:cardBackgroundColor="#00E676"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvUserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="User message"
            android:textColor="#0D2818"
            android:textSize="14sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- AI Message (Left aligned) -->
    <LinearLayout
        android:id="@+id/llAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/avatar_circle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸŒ¿"
                android:textSize="16sp"/>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="60dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#00E67620"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvAIMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="AI response"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>
