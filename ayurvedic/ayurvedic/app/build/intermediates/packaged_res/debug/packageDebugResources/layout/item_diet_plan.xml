<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1A5D4A"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:rippleColor="#3000E676">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Goal Emoji -->
        <TextView
            android:id="@+id/tvGoalEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ¥—"
            android:textSize="28sp"
            android:gravity="center"
            android:background="@drawable/circle_bg_dark"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <!-- Goal Title -->
            <TextView
                android:id="@+id/tvGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Loss Diet"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!-- Duration & Calories -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Month"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="#B8FFDD80"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1800 kcal"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 7, 2026"
                android:textColor="#B8FFDD80"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="#00E676"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/badge_bg_green"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
