<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_title"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_subtitle"
                android:textColor="#B8FFDD"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Quick Actions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_section_quick_actions"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <!-- Analytics -->
        <include
            android:id="@+id/layoutAnalytics"
            layout="@layout/item_settings_card"/>

        <!-- Clinical Alerts -->
        <include
            android:id="@+id/layoutAlerts"
            layout="@layout/item_settings_card"/>

        <!-- Tasks -->
        <include
            android:id="@+id/layoutTasks"
            layout="@layout/item_settings_card"/>

        <!-- Generate Report -->
        <include
            android:id="@+id/layoutReports"
            layout="@layout/item_settings_card"/>

        <!-- Data Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_section_data_management"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>

        <!-- Seasonal Foods -->
        <include
            android:id="@+id/layoutSeasonalFoods"
            layout="@layout/item_settings_card"/>

        <!-- Permissions -->
        <include
            android:id="@+id/layoutPermissions"
            layout="@layout/item_settings_card"/>

        <!-- Add Custom Food -->
        <include
            android:id="@+id/layoutAddFood"
            layout="@layout/item_settings_card"/>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/settings_logout"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FF5555"
            app:cornerRadius="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>