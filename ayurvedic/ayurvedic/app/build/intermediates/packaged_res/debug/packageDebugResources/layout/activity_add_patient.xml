<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Patient"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter patient details"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Personal Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL INFORMATION"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <!-- First Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter first name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Last Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter last name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- DOB -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etDob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="DD/MM/YYYY"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:drawableEnd="@drawable/ic_arrow_right"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingHorizontal="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contact Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT DETAILS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter phone number"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter address"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Registration Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <!-- Registration Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Date"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etRegDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="DD/MM/YYYY"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Follow Up 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Up 1"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etFollowUp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="DD/MM/YYYY or Notes"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Follow Up 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Up 2"
            android:textColor="#B8FFDD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etFollowUp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="DD/MM/YYYY or Notes"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD60"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Add Patient Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPatient"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add Patient"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:elevation="6dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
