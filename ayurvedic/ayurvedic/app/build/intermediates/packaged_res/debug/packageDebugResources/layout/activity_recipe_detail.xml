<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_splash_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Recipe Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <!-- Back Button Overlay -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"
                android:layout_margin="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <!-- Ingredients Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS"
                android:textColor="#B8FFDD80"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A5D4A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:padding="16dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Method Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="METHOD"
                android:textColor="#B8FFDD80"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A5D4A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:padding="16dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ayurvedic Notes Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ AYURVEDIC NOTES"
                android:textColor="#B8FFDD80"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A5D4A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#00E67630"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#B8FFDD"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:padding="16dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Recipe Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddRecipe"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add Recipe"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#0D2818"
                app:backgroundTint="#00E676"
                app:cornerRadius="16dp"
                app:icon="@drawable/ay_add"
                app:iconGravity="textStart"
                app:iconTint="#0D2818"
                app:elevation="6dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
