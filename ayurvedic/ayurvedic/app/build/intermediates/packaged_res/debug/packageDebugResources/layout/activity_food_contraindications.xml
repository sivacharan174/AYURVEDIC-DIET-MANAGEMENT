<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸ Food Contraindications"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avoid these Viruddha Ahara (incompatible food pairs)"
                android:textColor="#B8FFDD"
                android:textSize="13sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Contraindications Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KNOWN FOOD CONFLICTS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#FFB74D30"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cbMilk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥›ðŸŸ Milk &amp; Fish"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cbHoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¯ðŸ”¥ Honey &amp; Heat"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cbFruits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽðŸŒ¾ Fruits &amp; Grains"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cbCurd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥›ðŸ¥­ Yogurt &amp; Mango"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cbRadish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥•ðŸ¥› Radish &amp; Milk"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#FFB74D"
                    android:paddingStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0D281820"
            app:cardCornerRadius="12dp"
            app:strokeColor="#B8FFDD30"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="These conflicting combinations will be flagged when creating diet charts."
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end"
            app:iconTint="#0D2818"
            app:elevation="6dp"/>
    </LinearLayout>
</ScrollView>
