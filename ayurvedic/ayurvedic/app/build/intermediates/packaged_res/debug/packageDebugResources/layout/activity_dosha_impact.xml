<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§˜ Dosha Impact"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet impact analysis"
                    android:textColor="#B8FFDD"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Patient Info -->
        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient: John Doe"
            android:textColor="#B8FFDD"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Dosha Impact Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT DIET IMPACT"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <!-- Vata Impact Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¨"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vata"
                        android:textColor="#64B5F6"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/tvVataImpact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reducing â†“"
                        android:textColor="#00E676"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbVata"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="40"
                    android:progressTint="#64B5F6"
                    android:progressBackgroundTint="#0D2818"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pitta Impact Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#EF535030"
            app:strokeWidth="1dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pitta"
                        android:textColor="#EF5350"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/tvPittaImpact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Increasing â†‘"
                        android:textColor="#FFB74D"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbPitta"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="70"
                    android:progressTint="#EF5350"
                    android:progressBackgroundTint="#0D2818"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Kapha Impact Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’§"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kapha"
                        android:textColor="#00E676"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/tvKaphaImpact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balanced âš–ï¸"
                        android:textColor="#00E676"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbKapha"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#00E676"
                    android:progressBackgroundTint="#0D2818"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Analysis Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANALYSIS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E67630"
            app:strokeWidth="1dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvAnalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current diet tends to increase Pitta. Consider adding cooling foods like cucumber, coconut water, and leafy greens."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.4"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Food Impact Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food Impact Breakdown"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All â†’"
                android:textColor="#00E676"
                android:textSize="12sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFoodImpact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>

    </LinearLayout>
</ScrollView>
