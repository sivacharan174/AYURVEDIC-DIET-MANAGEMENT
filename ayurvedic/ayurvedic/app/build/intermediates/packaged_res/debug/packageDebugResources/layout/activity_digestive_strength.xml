<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’ª Digestive Strength"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your digestive strength to tailor your diet plan"
                android:textColor="#B8FFDD"
                android:textSize="13sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Strength Selection Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STRENGTH LEVEL"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp">

            <RadioGroup
                android:id="@+id/rgStrength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rbStrong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª Strong\nEfficient digestion, minimal discomfort after meals"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:padding="12dp"
                    android:background="@drawable/card_bg_modern"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbModerate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš–ï¸ Moderate\nAverage digestion, occasional bloating or discomfort"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:padding="12dp"
                    android:background="@drawable/card_bg_modern"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbWeak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¢ Weak\nSlow digestion, frequent bloating, gas, or discomfort"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:padding="12dp"
                    android:background="@drawable/card_bg_modern"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Symptoms Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYMPTOM INDICATORS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cbBloating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequent bloating"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas after meals"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbIndigestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indigestion"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbPain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdominal pain"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbBowel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Irregular bowel movements"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:buttonTint="#00E676"
                    android:paddingStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D2818"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end"
            app:iconTint="#0D2818"
            app:elevation="6dp"/>

    </LinearLayout>
</ScrollView>
