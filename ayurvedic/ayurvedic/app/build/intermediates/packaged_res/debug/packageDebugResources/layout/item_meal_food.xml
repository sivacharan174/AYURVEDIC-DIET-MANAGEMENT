<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#1A5D4A"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:rippleColor="#3000E676">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Food Icon -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/avatar_circle">

            <TextView
                android:id="@+id/tvFoodIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ›"
                android:textSize="22sp"/>
        </FrameLayout>

        <!-- Food Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 serving"
                android:textColor="#B8FFDD"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Calories Badge -->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 kcal"
            android:textColor="#0D2818"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/chip_accent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"/>

        <!-- Remove Button -->
        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_close"
            android:padding="4dp"
            app:tint="#FF6B6B"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
