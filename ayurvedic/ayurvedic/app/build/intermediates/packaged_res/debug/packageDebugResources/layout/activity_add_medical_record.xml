<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/card_bg_modern"
                android:padding="10dp"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ Add Visit Record"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Visit Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISIT DATE"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etVisitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select date (YYYY-MM-DD)"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:focusable="false"
                android:clickable="true"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Visit Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISIT TYPE"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerVisitType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:backgroundTint="#00E676"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reason -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REASON FOR VISIT"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What brought the patient in?"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:minLines="2"
                android:gravity="top"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Diagnosis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIAGNOSIS"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ayurvedic diagnosis or findings"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:minLines="2"
                android:gravity="top"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Prescription -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESCRIPTION"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etPrescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Herbs, diet changes, treatments"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:minLines="2"
                android:gravity="top"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Notes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLINICAL NOTES"
            android:textColor="#B8FFDD80"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A5D4A"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Additional observations or notes"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8FFDD80"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:minLines="3"
                android:gravity="top"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ’¾ Save Visit Record"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="14dp"
            app:backgroundTint="#00E676"
            android:textColor="#0D2818"/>

    </LinearLayout>
</ScrollView>
